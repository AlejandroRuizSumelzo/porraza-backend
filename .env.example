# ========================================
# Porraza Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=3001
NODE_ENV=production

# ----------------------------------------
# Database Configuration (PostgreSQL 18)
# ----------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=porraza_db
DB_USER=root
DB_PASSWORD=your_secure_password_here

# ----------------------------------------
# JWT Authentication
# ----------------------------------------
# IMPORTANT: Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ----------------------------------------
# Email Service (Resend)
# ----------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# ----------------------------------------
# Frontend Configuration
# ----------------------------------------
# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3000

# ----------------------------------------
# CORS Configuration (if needed)
# ----------------------------------------
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ----------------------------------------
# Stripe Payment Configuration
# ----------------------------------------
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get webhook secret from: https://dashboard.stripe.com/test/webhooks
# Or use `stripe listen --forward-to http://localhost:3001/payments/webhook` for local testing
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Price ID for 1,99€ product (create in Stripe Dashboard → Products)
STRIPE_PRICE_ID=price_your_price_id_here

# ----------------------------------------
# Logging
# ----------------------------------------
# LOG_LEVEL=info
